{
  "name": "ygo-search-card-mcp",
  "version": "1.0.0",
  "description": "MCP server for Yu-Gi-Oh card search",
  "type": "module",
  "main": "./dist/ygo-search-card-server.js",
  "bin": {
    "ygo-search-card-server": "./dist/ygo-search-card-server.js",
    "ygo_search": "./dist/cli/ygo_search.js",
    "ygo_bulk_search": "./dist/cli/ygo_bulk_search.js",
    "ygo_extract": "./dist/cli/ygo_extract.js",
    "ygo_convert": "./dist/cli/ygo_convert.js"
  },
  "types": "./dist/ygo-search-card-server.d.ts",
  "files": [
    "dist",
    "data",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/ygo-search-card-server.ts",
    "build": "tsc",
    "start": "node dist/ygo-search-card-server.js",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "yugioh"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "js-yaml": "^4.1.1",
    "jsonc-parser": "^3.3.1",
    "tsx": "^4.20.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.10"
  }
}
